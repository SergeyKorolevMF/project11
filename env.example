# Telegram Bot Token (получить у @BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# OpenAI API Key (для анализа заметок)
OPENAI_API_KEY=your_openai_api_key_here

# Настройки БД (для Docker Compose)
DB_USER=vibe_user
DB_PASSWORD=vibe_password
DB_NAME=vibe_tracker

# DATABASE_URL формируется автоматически в docker-compose.yml для контейнера,
# но если вы запускаете локально с Postgres (не в докере), укажите:
# DATABASE_URL=postgres://vibe_user:vibe_password@localhost:5432/vibe_tracker

